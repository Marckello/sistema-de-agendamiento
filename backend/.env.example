# Entorno
NODE_ENV=development
PORT=4000

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/citaspro?schema=public"

# JWT Secrets (generar con: openssl rand -base64 64)
JWT_ACCESS_SECRET=tu_super_secreto_access_token_cambiar_en_produccion
JWT_REFRESH_SECRET=tu_super_secreto_refresh_token_cambiar_en_produccion
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Frontend URL (para CORS y emails)
FRONTEND_URL=http://localhost:5173
APP_DOMAIN=localhost

# Email SMTP (puedes usar Mailtrap para desarrollo)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=tu_usuario_smtp
SMTP_PASS=tu_password_smtp
SMTP_FROM_NAME=CitasPro
SMTP_FROM_EMAIL=noreply@citaspro.com

# Webhook URL para n8n
WEBHOOK_URL=https://tu-n8n.com/webhook/citas
WEBHOOK_SECRET=tu_secreto_webhook

# Stripe (opcional para MVP)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# PayPal (opcional para MVP)
PAYPAL_CLIENT_ID=xxx
PAYPAL_CLIENT_SECRET=xxx
PAYPAL_MODE=sandbox

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
