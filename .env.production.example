# Environment Variables Template for Production
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=appointments
POSTGRES_PASSWORD=your-super-secure-password-here
POSTGRES_DB=appointments

# =============================================================================
# JWT SECRETS (generate with: openssl rand -base64 64)
# =============================================================================
JWT_ACCESS_SECRET=your-super-secret-access-token-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-at-least-32-characters

# =============================================================================
# DOMAIN & URLS
# =============================================================================
DOMAIN=tudominio.com
APP_URL=https://tudominio.com
CORS_ORIGINS=https://tudominio.com,https://*.tudominio.com

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# For Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tucorreo@gmail.com
# SMTP_PASS=tu-app-password

# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=tu-api-key

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@tudominio.com

# =============================================================================
# OPTIONAL: PAYMENT PROVIDERS (for future use)
# =============================================================================
# STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# PAYPAL_CLIENT_ID=xxx
# PAYPAL_CLIENT_SECRET=xxx
